{
	"name": "fortran-ls",
	"displayName": "FORTRAN IntelliSense",
	"description": "VSCode interface to the FORTRAN language server",
	"author": "Chris Hansen",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "hansec",
	"repository": {
		"type": "git",
		"url": "https://github.com/hansec/vscode-fortran-ls"
	},
	"bugs": {
		"url": "https://github.com/hansec/vscode-fortran-ls/issues"
	},
	"keywords": [
		"fortran",
		"intellisense",
		"autocompletion"
	],
	"categories": [
		"Programming Languages"
	],
	"engines": {
		"vscode": "^1.22.0"
	},
	"activationEvents": [
		"onLanguage:fortran",
		"onLanguage:fortran-modern"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "FORTRAN IntelliSense",
			"properties": {
				"fortran-ls.executablePath": {
					"scope": "resource",
					"type": "string",
					"default": "fortls",
					"description": "Path to fortran-language-server (fortls)."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode": "^1.1.17",
		"vscode-languageclient": "^4.1.3"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.48",
		"@types/node": "^6.0.101",
		"typescript": "^2.7.2"
	}
}
